{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "../build/electron",
    "baseUrl": ".",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [".", "../src/types"],
  "exclude": ["node_modules"]
}
